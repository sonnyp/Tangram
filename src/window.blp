using Gtk 4.0;
using Adw 1;

Adw.ApplicationWindow window {
  resizable: true;
  default-width: 800;
  default-height: 600;
  width-request: 360;
  height-request: 360;

  Adw.Breakpoint breakpoint {
    condition ("max-aspect-ratio: 1")
  }

  Stack stack_views {
    hhomogeneous: true;
    transition-type: crossfade;
  }
}
