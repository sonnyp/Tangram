<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="tangram">
  <!-- https://gjs-docs.gnome.org/gtk30~3.24.8/gtk.positiontype -->
  <enum id="re.sonny.Tangram.PositionType">
    <value nick="left" value="0"/>
    <value nick="right" value="1"/>
    <value nick="top" value="2"/>
    <value nick="bottom" value="3"/>
  </enum>

  <schema id="re.sonny.Tangram">
    <key name="tabs-position" enum='re.sonny.Tangram.PositionType'>
      <default>"left"</default>
      <summary>Tabs position</summary>
      <description>Sets the position of the tabs</description>
    </key>

    <key name="window-height" type="i">
      <default>0</default>
      <summary>Window height</summary>
      <description>Height of the window</description>
    </key>

    <key name="window-width" type="i">
      <default>0</default>
      <summary>Window width</summary>
      <description>Width of the window</description>
    </key>

    <key name="instances" type="as">
      <default>[]</default>
      <summary>Instances</summary>
      <description>Identifiers of instances to be found in /re/sonny/Tangram/instances/</description>
    </key>
  </schema>

  <schema id="re.sonny.Tangram.Instance">
    <key type="s" name="name">
      <default>""</default>
      <summary>Name</summary>
      <description>Name to display</description>
    </key>
    <key type="s" name="url">
      <default>""</default>
      <summary>URL</summary>
      <description>Start URL</description>
    </key>
    <!-- TODO icon -->
    <!-- <key type="s" name="icon">
      <default>""</default>
      <summary>Icon</summary>
      <description>Service icon</description>
    </key> -->
  </schema>

</schemalist>
